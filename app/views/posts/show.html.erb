<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Image:</strong>
  <% if @post.image.attached? %>
    <%= image_tag @post.image, width: '60px' %>
  <% end %>
</p>

<p>
  <strong>Avartars:</strong>
  <% if @post.avartars.attached? %>
    <% @post.avartars.each do |avartar| %>
        <%= image_tag avartar, width: '200px' %>
      <% end %>
  <% end %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
